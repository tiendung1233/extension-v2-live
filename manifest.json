{
  "manifest_version": 3,
  "name": "Shopee Affiliate Link Generator (Live)",
  "version": "2.1",
  "description": "Tạo link affiliate Shopee tự động từ Dashboard - Production",
  "permissions": ["activeTab", "tabs", "scripting", "alarms", "storage"],
  "host_permissions": [
    "https://affiliate.shopee.vn/*",
    "https://affiliateserver.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "https://affiliateserver.vercel.app/*",
        "https://hoantien24h.com/*",
        "https://*.hoantien24h.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
  